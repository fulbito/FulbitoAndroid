<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fulbitoAndroid.fulbito"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.fulbitoAndroid.fulbito.FulbitoApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.fulbitoAndroid.fulbito.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fulbitoAndroid.admUsuario.ModUsuarioActivity"
            android:label="@string/title_activity_mod_usuario" >
        </activity>
        <activity
            android:name="com.fulbitoAndroid.admUsuario.LoginUsuarioActivity"
            android:label="@string/title_activity_login_usuario" >
        </activity>
        <activity
            android:name="com.fulbitoAndroid.admUsuario.RegistrarUsuarioActivity"
            android:label="@string/title_activity_registrar_usuario" >
        </activity>
        <activity
            android:name="com.fulbitoAndroid.fulbito.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
    </application>

</manifest>
