<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TextView
		android:id="@+id/txtVwLogin"
		style="@style/TxtVwLogin"
		android:text="@string/txtLogin" />

	<EditText
	    android:id="@+id/edtTxtEmailLogin"
	    style="@style/EdtTxtLogin"
	    android:ems="10"	   
	    android:inputType="textEmailAddress"
	    android:hint="@string/txtCampoCorreoElectronico" >
	</EditText>

    <EditText
        android:id="@+id/edtTxtContrasenaLogin"
        style="@style/EdtTxtLogin"
        android:ems="10"              
        android:inputType="textPassword"
        android:hint="@string/txtCampoContrasena" />

	<Button
	    android:id="@+id/btnIngresar"
	    style="@style/ButtonLogin"
	    android:text="@string/txtBotonIngresar" />
	
	<TextView
		android:id="@+id/txtVwOlvidoContrasena"
		style="@style/TxtVwLogin"
		android:text="@string/txtOlvidoContrasena" />

	<Button
	    android:id="@+id/btnRecuperarContrasena"
	    style="@style/ButtonLogin"
	    android:text="@string/txtRecuperarContrasena" />
            
</LinearLayout>
