<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab1Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_layout_sombra" >

    <TextView
        android:id="@+id/txtVwAlias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/txtCampoAlias"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_weight="1" />
    
    <EditText
        android:id="@+id/edtTxtAlias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:layout_weight="1"
        style="@style/EdtTxtLogin">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fecha Nac."
            android:layout_weight="2"
            android:textColor="#FFFFFF"
        	android:gravity="center" />
		
       <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:calendarViewShown="false"
         />
       
    </LinearLayout>
    
    <TextView
        android:id="@+id/txtVwTelefono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Telefono"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_weight="1" />
    
    <EditText
        android:id="@+id/edtTxtTelefono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="phone"
        android:layout_weight="1"
        style="@style/EdtTxtLogin">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sexo"
            android:layout_weight="2"
            android:textColor="#FFFFFF"
        	android:gravity="center" />
		
        <RadioGroup android:id="@+id/gruporb"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="SEXO"
		    android:layout_weight="1">
	 
	        <RadioButton
	            android:id="@+id/radioButton1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="M"
	            android:layout_weight="1"
	            android:textColor="#FFFFFF"
	        	android:gravity="center" />
	
	        <RadioButton
	            android:id="@+id/radioButton2"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="F"
	            android:layout_weight="1"
	            android:textColor="#FFFFFF"
	        	android:gravity="center" />
		</RadioGroup>
    </LinearLayout>
    
    <Button
	    android:id="@+id/btnPassword"
	    style="@style/ButtonLogin"
	    android:text="@string/txtBotonModificarPassword" />
    
    <Button
	    android:id="@+id/btnGuardarPerfil"
	    style="@style/ButtonLogin"
	    android:text="@string/txtBotonGuardarCambios" />
        
</LinearLayout>
