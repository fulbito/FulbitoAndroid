<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
		android:id="@+id/txtVwLogin"
		style="@style/TxtVwLogin"
		android:text="@string/txtLogin" />
	
	<Button
	    android:id="@+id/btnInicioIngresar"	    
	    style="@style/BtnFulbito1"   	    
	    android:text="@string/txtBotonIngresar" />
	
	<LinearLayout
	    android:id="@+id/loBotonTwitter"	   	   
	    style="@style/BtnRedSocial" 	    
	    android:background="@drawable/boton_twitter" >
	
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="6"
	        android:src="@drawable/icono_twitter"
	        android:paddingLeft="0dp"
		    android:paddingRight="0dp"
		    android:paddingBottom="10dp"
		    android:paddingTop="10dp" />

	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:padding="0dp" >

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/txtLoginTwitter"
	            android:layout_centerInParent="true"
	            android:textColor="#000000"
	            android:textSize="@dimen/dimenTxtInicio" />

	    </RelativeLayout>
	
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/loBotonFacebook"	    
	    style="@style/BtnRedSocial"   	    
	    android:background="@drawable/boton_facebook" >
	
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="6"
	        android:src="@drawable/icono_facebook"
	        android:paddingLeft="0dp"
		    android:paddingRight="0dp"
		    android:paddingBottom="10dp"
		    android:paddingTop="10dp" />

	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:padding="0dp" >

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/txtLoginFacebook"
	            android:layout_centerInParent="true"
	            android:textColor="#000000"
	            android:textSize="@dimen/dimenTxtInicio" />

	    </RelativeLayout>
	
	</LinearLayout>          

	<TextView
		android:id="@+id/txtVwRegistrar"
		style="@style/TxtVwLogin"
		android:text="@string/txtRegistrar" />
	
	<Button
	    android:id="@+id/btnInicioRegistrar"	   
	   	style="@style/BtnFulbito1"   	    
	    android:text="@string/txtBotonRegistrarme" />

</LinearLayout>
