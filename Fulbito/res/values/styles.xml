<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Estilo del layout Principal de la interfaz de logueo. -->
    <style name="LayoutLogin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item> 
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">20dp</item>  
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">30dp</item>                  
    </style>    

    <!-- Estilo del textView de la interfaz de logueo. -->
    <style name="TxtVwLogin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item> 
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style> 
    
    <!-- Estilo del editText de la interfaz de logueo. -->
    <style name="EdtTxtLogin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item> 
        <item name="android:background">@drawable/resaltar_campo_on_focus</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- Estilo del Button de la interfaz de logueo. -->
    <style name="ButtonLogin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boton_interfaz_login</item>  
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>     
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Estilo del Button twitter. -->
    <style name="ButtonTwitter">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boton_twitter</item>  
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>     
    </style>
    
    <!-- Estilo del Button facebook. -->
    <style name="ButtonFacebook">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boton_facebook</item>  
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>     
    </style>
    
</resources>
